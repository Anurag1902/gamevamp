                <div class="user-detail">

                    <form action="<%=(typeof editData!='undefined')?'/users/edit/'+editData.id:'/users/create'%>" method="POST">
                        <table class="table_">
                            <tr>
                                <td>
                                    <label>Full Name</label>
                                    
                                </td>
                                <td>
                                    <input type="text" placeholder="Enter Full Name" name="fullname" required
