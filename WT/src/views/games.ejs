    <div>
        <h1 style="margin-left: 50px;color: white">Games Available for Tournament</h1>
        <hr style="margin-right: 500px;margin-left: 50px">
        <!-- The Modal -->
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <div class="modal-header">
