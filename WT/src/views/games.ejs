                    <figure class="card">
                        <img src="http://cdn.shopify.com/s/files/1/1948/2603/products/96_1200x1200.jpg?v=1531236464" />
                        <figcaption id="fortnite">Fortnite</figcaption>
                    </figure>
                </button>
                <button id="r6s">
                    <figure class="card">
                        <img
                            src="https://render.fineartamerica.com/images/rendered/search/poster/images/artworkimages/medium/3/rainbow-six-siege-lesion-long-art.jpg" />
                        <figcaption id="rainbow">Rainbow Six Seige</figcaption>
                    </figure>
                </button>
                <button id="ff">
                    <figure class="card">
                        <img src="https://m.media-amazon.com/images/I/614oox3qvcL.jpg" />
                        <figcaption id="fifa">Fifa</figcaption>
                    </figure>
                </button>
                <button id="ssb">
                    <figure class="card">
                        <img src="https://images-na.ssl-images-amazon.com/images/I/71RX-Ma8uNL._SY741_.jpg" />
                        <figcaption id="smash">Super Smash Bros</figcaption>
                    </figure>
                </button>
                <button id="rc">
                    <figure class="card">
                        <img
                            src="https://image.api.playstation.com/vulcan/img/rnd/202007/1715/LU6PNrHpre26JO6mr2TUeXck.png" />
                        <figcaption id="rogue">Rogue Company</figcaption>
                    </figure>
                </button>
                <button id="pg">
                    <figure class="card">
                        <img src="https://i.pinimg.com/originals/1e/b0/07/1eb0075317387869e6e2c7cf29a88fcb.jpg" />
                        <figcaption id="pubg">PUBG:Players Unknown BattleGround</figcaption>
                    </figure>
                </button>
                <script>
                    // Get the modal
                    var modal = document.getElementById("myModal");

                    // Get the button that opens the modal
                    var dota = document.getElementById("dota");
                    var csgo = document.getElementById("csgo");
                    var valo = document.getElementById("valo");
                    var ow = document.getElementById("ow");
                    var lol = document.getElementById("lol");
                    var rl = document.getElementById("rl");
                    var fn = document.getElementById("fn");
                    var r6s = document.getElementById("r6s");
                    var ff = document.getElementById("ff");
                    var ssb = document.getElementById("ssb");
                    var rc = document.getElementById("rc");
                    var pg = document.getElementById("pg");

                    // Get the <span> element that closes the modal
                    var span = document.getElementsByClassName("close")[0];

                    // When the user clicks the button, open the modal

                    dota.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("dota2").innerHTML;
                        document.getElementById("gamedata").innerHTML = '<a href="/api/dota2"> See more </a>';
                    }
                    csgo.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("cs").innerHTML;
                        document.getElementById("gamedata").innerHTML = '<a href="/api"> See more </a>';
                    }
                    valo.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("valorant").innerHTML;
                    }
                    ow.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("overwatch").innerHTML;
                    }
                    lol.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("league").innerHTML;
                        document.getElementById("gamedata").innerHTML = '<a href="/api/lol"> See more </a>';
                    }
                    rl.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("rocketleague").innerHTML;
                    }
                    fn.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("fortnite").innerHTML;
                    }
                    r6s.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("rainbow").innerHTML;
                    }
                    ff.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("fifa").innerHTML;
                    }
                    fn.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("fortnite").innerHTML;
                    }
                    ssb.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("smash").innerHTML;
                    }
                    rc.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("rogue").innerHTML;
                    }
                    pg.onclick = function () {
                        modal.style.display = "block";
                        document.getElementById("gamename").innerHTML = document.getElementById("pubg").innerHTML;
                    }
                    // When the user clicks on <span> (x), close the modal
                    span.onclick = function () {
                        modal.style.display = "none";
                    }

                    // When the user clicks anywhere outside of the modal, close it
                    window.onclick = function (event) {
                        if (event.target == modal) {
                            modal.style.display = "none";
                        }
                    }

                </script>
